{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "declarationMap": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
          },
    "outDir": "./dist",
    "types": [
      "bun"
    ],
    "composite": false,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "jsxImportSource": "hono/jsx"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
