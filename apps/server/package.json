    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@better-auth/expo": "^1.3.4",
    "@dodopayments/better-auth": "^1.1.1",
    "@hono/zod-validator": "^0.7.2",
    "@repo/types": "workspace:*",
    "better-auth": "^1.3.4",
    "dodopayments": "^1.43.1",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.2",
    "pg": "^8.14.1",
    "standardwebhooks": "^1.0.0",
    "zod": "^4.0.14"
  },
  "trustedDependencies": [
    "supabase"
  ],
  "devDependencies": {
    "tsdown": "^0.12.9",
    "typescript": "^5.8.2",
